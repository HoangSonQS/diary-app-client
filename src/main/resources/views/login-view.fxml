<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" maxWidth="400" spacing="20.0" styleClass="form-container">
            <children>
                <Label styleClass="header-title" text="Chào mừng trở lại!">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>

                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="form-label" text="Email hoặc Tên đăng nhập" />
                        <TextField fx:id="usernameField" promptText="Nhập email hoặc tên đăng nhập" styleClass="text-field" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="form-label" text="Mật khẩu" />
                        <StackPane>
                            <PasswordField fx:id="passwordField" promptText="Mật khẩu" styleClass="text-field" />
                            <TextField fx:id="visiblePasswordField" managed="false" promptText="Mật khẩu" styleClass="text-field" visible="false" />
                        </StackPane>
                    </children>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <CheckBox fx:id="showPasswordCheckBox" text="Hiện mật khẩu" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <CheckBox fx:id="rememberMeCheckBox" text="Ghi nhớ đăng nhập" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Hyperlink fx:id="forgotPasswordLink" text="Quên mật khẩu?" />
                    </children>
                </HBox>

                <Label fx:id="errorLabel" managed="false" styleClass="error-label" text="Sai thông tin đăng nhập" visible="false" wrapText="true" />

                <Button fx:id="loginButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="Infinity" styleClass="primary-button" text="Đăng nhập" />

                <Hyperlink fx:id="signUpLink" text="Chưa có tài khoản? Đăng ký ngay" />
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </children>
</StackPane>