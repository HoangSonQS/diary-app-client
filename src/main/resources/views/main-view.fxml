<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<?import javafx.scene.layout.Pane?>
<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mydiary.diaryappclient.controller.MainViewController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
            <children>
                <Label text="Ultimate Diary" textFill="#34495E">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button fx:id="newEntryButton" mnemonicParsing="false" onAction="#handleNewEntryButtonAction" styleClass="primary-button" text="+ Bài viết mới" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Chào mừng!" />
                <Button fx:id="setPinButton" mnemonicParsing="false" onAction="#handleSetPinButtonAction" text="Cài đặt PIN" />
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogoutButtonAction" text="Đăng xuất" />
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.3" BorderPane.alignment="CENTER">
            <items>
                <ListView fx:id="entriesListView" prefHeight="200.0" prefWidth="200.0" />

                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox fx:id="entryDetailView" alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: #FFFFFF;">
                            <children>
                                <Label fx:id="entryTitleLabel" text="Chọn một bài viết để xem">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                                <Label fx:id="entryDateLabel" textFill="#7F8C8D" />
                                <WebView fx:id="entryContentView" prefHeight="200.0" />
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>